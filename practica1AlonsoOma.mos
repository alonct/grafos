model alonso

uses "mmxprs", "mmsystem", "mmive", "mmetc"
declarations
	n = 3
	x : array(1..n) of mpvar
	objetivo : linctr
end-declarations
	objetivo := sum(i in 1..3)i*x(i)
	3*x(1) + 7*x(3) <= 21
	2*x(2) + x(3) <= 20
	x(1) - x(3) = 22
	x(2) is_integer
	x(3) is_free
	maximize(objetivo)
	writeln('La solución es (',getsol(x(1)),',',getsol(x(2)),',',getsol(x(3)),')')
end-model
